# Configuration file for X Bot
# Copy this to .env and fill in your preferences

# Bot behavior settings
MAX_TWEETS_PER_SESSION=10
MIN_DELAY_SECONDS=30
MAX_DELAY_SECONDS=120

# Keywords to look for in posts (comma-separated)
# Leave empty to interact with all posts
KEYWORDS=AI,technology,programming,machine learning,data science,software

# LLM Model settings
LLM_MODEL=microsoft/DialoGPT-small
# Alternative small models you can try:
# LLM_MODEL=microsoft/DialoGPT-medium
# LLM_MODEL=facebook/blenderbot_small-90M
# LLM_MODEL=google/flan-t5-small

# Automation settings
AUTOMATION_INTERVAL_MINUTES=30
HEADLESS_MODE=False

# Interaction probabilities (0.0 to 1.0)
LIKE_PROBABILITY=0.8
REPLY_PROBABILITY=0.3

# Safety settings
MAX_DAILY_INTERACTIONS=50
ENABLE_RATE_LIMITING=True